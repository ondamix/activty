
#include <stdio.h>

int main(){

    int n=0;

    printf("Input any Integer: ");
    scanf("%d", &n);
    printf("\n");

    switch(n<0){

        case 0:

            if(!n!=0){
                printf("The Inputed data is Invalid\n\n");
            }
            else{
                printf("The Integer is a Positive Number.\n\n");
            }
            break;
        case 1:
            printf("The Integer is a Negative Number.\n\n");
            break;
    
}
    return 0;
}
